<Window x:Class="LoginWPF.PasswordConiform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWPF"
        mc:Ignorable="d"
        Title="PasswordConiform" Height="150" Width="300">
    <StackPanel>
        <StackPanel Margin="20">
            <TextBlock Padding="0" Margin="10 0">Введите код полученный по почте</TextBlock>
            <TextBox Margin="10" x:Name="password"/>
            <Button Click="ConifromButton_Click" Margin="10 0">Проверить</Button>
        </StackPanel>
    </StackPanel>
</Window>
